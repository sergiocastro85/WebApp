@model IEnumerable<IndiceVentasViewModel>

<canvas id="ventasChart"></canvas>


@section scripts {
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            
        <script>
            var ctx = document.getElementById('ventasChart').getContext('2d');
            var ventasChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.Select(v => v.Nombre))),
                     datasets: [{
                        label: 'Productos Mas Vendidos',
                        data: @Html.Raw(Json.Serialize(Model.Select(v => v.TotalVendido))),
                    backgroundColor: 'rgb(237, 166, 247 )',
                    borderColor: 'rgb(0,0,0)',
                    borderWidth:1
                        
                    },]

                    
                      
            },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }

                }
            });
        </script>
}
