@model DetalleVentaViewModels
@{

    ViewData["Title"] = "Editar Detalles Venta";
}


<form asp-action="Editar">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="IdDetalleVenta" />


    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <select asp-for="IdArticulo" asp-items="Model.Articulos" class="form-select"></select>
        <span asp-validation-for="IdArticulo" class="text-danger"></span>

    </div>

    <div class="mb-3">
        <label asp-for="Cantidad" class="form-label"></label>
        <input asp-for="Cantidad" class="form-control" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="rTotal" class="form-label"></label>
        <input asp-for="rTotal" class="form-control" />
        <span asp-validation-for="rTotal" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DtmFecha" class="form-label"></label>
        <input asp-for="DtmFecha" class="form-control" />
        <span asp-validation-for="DtmFecha" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>



</form>



@section Scripts{


    <script src="~/js/scriptsCalcularTotal.js" asp-append-version="true"></script>

}