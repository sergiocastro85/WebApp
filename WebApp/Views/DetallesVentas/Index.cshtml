@model IEnumerable<DetalleVenta>

@{
    ViewData["Title"] = "DetalleVentas";
}

<h1>DetallesVentas</h1>
<a asp-action="Crear" class="btn btn-primary mb-3">Crear nuevo</a>
@*crear tabla*@
<table class="table">
    @*cabecera*@
    <thead>
        @*fila*@
        <tr>
            @*primera celda*@
            <th>Eiditar Registro</th>
            <th>Nombre</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Total</th>
            <th>Fecha</th>

        </tr>
    </thead>
    @*cuerpo*@
    <tbody>

        @foreach (var detalleVenta in Model)
        {
            @*fila*@
            <tr>

                @*Celda*@
                <td>
                    @*links*@
                    <a class="btn btn-primary" asp-action="Editar" asp-route-id="@detalleVenta.IdDetalleVenta">Editar</a>
                  
                </td>
          
                <td>
                    @detalleVenta.Nombre
                </td>
                <td>
                    @detalleVenta.Cantidad
                </td>

                <td>
                    @detalleVenta.Precio
                </td>
                <td>
                    @detalleVenta.rTotal
                </td>
                <td>
                    @detalleVenta.DtmFecha
                </td>
            </tr>

        }

    </tbody>
</table>
