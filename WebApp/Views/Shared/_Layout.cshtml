<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/animacion.css" />
    <link rel="stylesheet" href="~/css/Stylos.css" />
   
</head>
<body>
     <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-opacity-100 border-bottom box-shadow mb-4" style="background-color:lightskyblue;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Control de Productos</a>
                <div class="navbar-collapse collapse d-sm-in line-flex justify-content-between">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-controller="Categorias" asp-action="Index">Categorías</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-controller="Articulos" asp-action="Crear">Crear Artículos</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-controller="Articulos" asp-action="Index">Lista De Artículos</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-controller="Proveedor" asp-action="Index">Lista Proveedores</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-controller="DetallesVentas" asp-action="Crear">Ingresar Detalle Venta</a>
                        </li>
                        <li class="nav navbar-dark text-black">
                            <a class="dropdown-item tex" style="font-weight-bold" asp-controller="DetallesVentas" asp-action="Index">Editar Detalle Venta</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="dropdown-item" href="#"  data-bs-toggle="dropdown" >Reportes</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="StockProducto" asp-action="Index">Stock</a></li>
                                <li><a class="dropdown-item" asp-controller="MasVendido" asp-action="Index">Productos más vendidos</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="dropdown-item" href="#"  data-bs-toggle="dropdown" >Admin</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="usuarios" asp-action="Registro">Registrar Usuarios</a></li>
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LinksLogin" />
                 </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.8.0/chart.min.js" integrity="sha512-sW/w8s4RWTdFFSduOTGtk4isV1+190E/GghVffMA9XczdJ2MDzSzLEubKAs5h0wzgSJOQTRYyaz73L3d6RtJSg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
