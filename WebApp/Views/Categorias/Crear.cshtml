@model Categoria

@{
    ViewData["Title"] = "Crear Categoría"; 
  
}

<h1>Crear Categoría para Articulos</h1>
<h5>Subtitulo para algo</h5>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Crear">
    <div class="mb-3">
        @*label*@
        <label asp-for="Nombre" class="form-label"></label>
        @*caja de texto*@
        <input type="text" asp-for="Nombre" class="form-control" />
     </div>
     @*boton*@
     @*hace push hacia el controlador categorias*@
     <button type="submit" class="btn btn-primary">Enviar</button>
     <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

</form>
